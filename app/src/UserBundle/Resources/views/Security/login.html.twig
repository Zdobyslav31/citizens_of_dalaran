{% extends "@FOSUser/layout.html.twig" %}
{% block title %}
    {{ 'title.login'|trans }}
{% endblock %}
{% block content_title %}
    {{ 'title.login'|trans }}
{% endblock %}

{% block fos_user_content %}
    <div class="card mb-3 ml-auto mr-auto">
        <div class="card-body">
            <span class="mb-2">{{ 'message.no_account_register'|trans }} </span>
            <a class="btn btn-success float-right ml-2" href="{{ path('fos_user_registration_register') }}">{{ 'message.register'|trans }}</a>
        </div>
    </div>
    <div class="clearfix"></div>
    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="form-group">
            <label class="form-control-label" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
        </div>
        <div class="form-group">
            <label class="form-control-label" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
            <input class="form-control" type="password" id="password" name="_password" required="required" />
        </div>
        <div class="form-group">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
        </div>
        <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
    </form>
{% endblock %}

