{% extends "@FOSUser/layout.html.twig" %}

{% block title %}
    {{ app.user.username }}: {{ 'title.edit_profile'|trans }}
{% endblock %}
{% block content_title %}
    {{ app.user.username }}: {{ 'title.edit_profile'|trans }}
{% endblock %}

{% block fos_user_content %}
    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
        {{ form_row(form.username) }}
        {{ form_row(form.current_password) }}
        {{ form_row(form.email) }}
        {{ form_row(form.profilePictureFile) }}
        {{ form_row(form.description) }}
        <hr>
        <div class="card text-white bg-info mb-3">
            <div class="card-header"><h4>{{ 'message.personal_data_title'|trans }}</h4></div>
            <div class="card-body">{{ 'message.personal_data_info'|trans }}</div>
        </div>
        {{ form_row(form.name) }}
        {{ form_row(form.dateOfBirth) }}
        {{ form_row(form.phoneNumber) }}
        {{ form_row(form.emergencyPhone) }}
        {{ form_row(form.healthIssues) }}
        {{ form_row(form.nourishmentIssues) }}
        <div>
            <input type="submit" class="btn btn-primary" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" />
        </div>
    {{ form_end(form) }}

    <a href="{{ url('fos_user_profile_show') }}" class="btn btn-secondary m-1 float-right">
        <i class="fas fa-user"></i> {{ 'message.back_to_profile'|trans }}
    </a>
{% endblock fos_user_content %}
