{% if app.session.started and app.session.flashBag.peekAll is not empty %}
    <div class="messages">
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                {%  include 'components/_single_alert_message.html.twig' with {
                    is_single_message: false,
                    is_dismissible: true,
                    type: type,
                    message: message|trans
                } %}
            {% endfor %}
        {% endfor %}
    </div>
{% endif %}