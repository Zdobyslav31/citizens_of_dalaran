<div id="carousel1" class="carousel slide {% if carousel == 'sm_hide' %}d-md-block d-none{% endif %}" data-ride="carousel">
    <ol class="carousel-indicators">
        {% set k = events|length + 2 %}
        {% for i in range(0, k) %}
        <li data-target="#carousel1" data-slide-to="{{ i }}"{% if i == 0 %} class="active"{% endif %}></li>
        {% endfor %}
    </ol>
    <div class="carousel-inner">
        {% if events|length %}
            {% set counter = 0 %}
            {% for event in events %}
                    <div class="carousel-item{% if counter == 0 %} active{% endif %}">
                        <a href="{{ path('event_view', {'id': event.id}) }}" class="link-unstyled">
                        {% image '../app/Resources/public/images/slide2.jpg' %}
                            <img class="d-block w-100" src="{{ asset('./uploads/' ~ event_subdirectory_path ~ '/' ~ event.imagePath) }}" alt="{{ event.name }} cover image">
                        {%  endimage %}
                        <div class="carousel-caption d-none d-md-block">
                            <h3>{{ event.name }}</h3>
                            <p>{{ event.summary }}</p>
                        </div>
                        </a>
                    </div>
                {% set counter = counter + 1 %}
            {% endfor %}
        {% endif %}
        <div class="carousel-item{% if counter is not defined %} active{% endif %}">
            <a href="{{ path('larps', {'title': 'what_is_larp'}) }}" class="link-unstyled">
                {% image '../app/Resources/public/images/slide1.jpg' %}
                    <img class="d-block w-100" src="{{ asset_url }}" alt="{{ 'carousel.slide1.alt'|trans }}">
                {%  endimage %}
                <div class="carousel-caption d-none d-md-block">
                    <h3>{{ 'carousel.slide1.header'|trans }}</h3>
                    <p>{{ 'carousel.slide1.caption'|trans }}</p>
                </div>
            </a>
        </div>
        <div class="carousel-item">
            <a href="{{ path('event_index') }}" class="link-unstyled">
                {% image '../app/Resources/public/images/slide2.jpg' %}
                    <img class="d-block w-100" src="{{ asset_url }}" alt="{{ 'carousel.slide2.alt'|trans }}">
                {%  endimage %}
                <div class="carousel-caption d-none d-md-block">
                    <h3>{{ 'carousel.slide2.header'|trans }}</h3>
                    <p>{{ 'carousel.slide2.caption'|trans }}</p>
                </div>
            </a>
        </div>
        <div class="carousel-item">
            <a href="{{ path('group', {'title': 'about'}) }}" class="link-unstyled">
                {% image '../app/Resources/public/images/slide3.jpg' %}
                    <img class="d-block w-100" src="{{ asset_url }}" alt="{{ 'carousel.slide3.alt'|trans }}">
                {%  endimage %}
                <div class="carousel-caption d-none d-md-block">
                    <h3>{{ 'carousel.slide3.header'|trans }}</h3>
                    <p>{{ 'carousel.slide3.caption'|trans }}</p>
                </div>
            </a>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carousel1" role="button" data-slide="prev"> <span class="carousel-control-prev-icon" aria-hidden="true"></span> <span class="sr-only">Previous</span> </a>
    <a class="carousel-control-next" href="#carousel1" role="button" data-slide="next"> <span class="carousel-control-next-icon" aria-hidden="true"></span> <span class="sr-only">Next</span> </a>
</div>