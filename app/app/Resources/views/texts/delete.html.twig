{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.text_delete'|trans }}: {{  text.title }}
{% endblock %}
{% block content_title %}
    {{ 'title.text_delete'|trans }}: {{  text.title }}
{% endblock %}


{% block content %}
    {{ form_start(form, { method: 'post', action: path('texts_delete', {'id': text.id}) }) }}
    {% if false == form.vars.valid %}
        <div class="alert alert-danger" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            {{ 'message.form_error'|trans }}
        </div>
    {% endif %}
    {{ form_widget(form) }}
    <span class="clearfix m-1">{{ 'message.delete_confirmation'|trans }}</span>
    <div>
        <input type="submit" value="{{ 'action.delete'|trans }}" class="btn btn-primary" />
        <a class="btn btn-secondary float-right" href="{{ app.request.headers.get('referer') }}">
            <i class="fas fa-long-arrow-alt-left"></i> {{ 'message.back'|trans }}
        </a>
    </div>
    {{ form_end(form) }}

{% endblock %}